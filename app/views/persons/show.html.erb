<!-- Person Details Showing -->
<div class="container mt-5">
  <!-- Error Message -->
  <% if flash[:errors] %>
    <% flash.each do |name, message| %>
      <p class="text-danger"><%= message %></p>
    <% end %>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card bg-light border-warning shadow">
        <div class="card-body">
          <div class="card-header">
            <h2 class="text-center">Person Details</h2>
          </div>
          <div>
            <h2> &#10145; Name: <%= @person.name %> </h2>
            <h2> &#10145; Email: <%= @person.detail.email %> </h2>
            <h2> &#10145; Title: <%= @person.detail.title %> </h2>
            <h2> &#10145; Age: <%= @person.detail.age %> </h2>
            <h2> &#10145; Phone: <%= @person.detail.phone %> </h2>
          </div>
          <div class="d-flex justify-content-between mt-3">
            <%= link_to "Edit person", edit_person_path(@person), class: "btn btn-success rounded-pill px-3 py-2" %>
            <%= link_to "Back", persons_path, class: "btn btn-primary rounded-pill px-3 py-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
