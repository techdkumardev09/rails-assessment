<div class="container mt-5">
  <h1 class="display-4 mb-4">Edit Person</h1>

  <%= form_for @person do |form| %>
    <% if @person.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

        <ul>
          <% @person.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="mb-3">
      <h2 class="h4">Details</h2>
      <div class="row">
        <div class="col-md-6">
          <%= form.fields_for :detail_attributes, @person.detail || @person.build_detail do |details_form| %>
            <%= details_form.hidden_field :id %>

            <div class="mb-3">
              <%= details_form.label :email, class: "form-label" %>
              <%= details_form.email_field :email, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= details_form.label :title, class: "form-label" %>
              <%= details_form.text_field :title, class: "form-control" %>
            </div>
          <% end %>
        </div>

        <div class="col-md-6">
          <%= form.fields_for :detail_attributes, @person.detail || @person.build_detail do |details_form| %>
            <%= details_form.hidden_field :id %>

            <div class="mb-3">
              <%= details_form.label :phone, class: "form-label" %>
              <%= details_form.number_field :phone, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= details_form.label :age, class: "form-label" %>
              <%= details_form.number_field :age, class: "form-control" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= form.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
